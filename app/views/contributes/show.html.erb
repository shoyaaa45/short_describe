<div class = "row">
  <div class = "col-md-3">
  </div>     
  <div class = "col-md-9">
    <div class ="page-header">
      <h1>
      こんなこともあったな~  
      </h1>
    </div>
    <div class = "row">
      <div class = "col-md-8">
        <div class ="panel panel-info">
          <div class ="panel-heading">
	        タイトル 
          </div>
          <div class = "panel-body">
	          <%= @contribute.title %> 
          </div>
          <div class ="panel-heading">
	        記入日
          </div>
          <div class = "panel-body">
	          <%= @contribute.entry_time.strftime('%Y/%m/%d %H:%M') %> 
          </div>
          <div class = "panel-heading">
  	      内容
          </div>
          <div class = "panel-body">
            <%= @contribute.content %>	  
          </div>
          <% if @contribute.contribute_image? %>
            <div class = "panel-heading">
  	          今日の一枚
            </div>
            <div class = "thumbnail">
              <%= image_tag @contribute.contribute_image.url %>
            </div>
          <% end %>
        </div>
    </div>
    <div class = "col-md-4" >
      <% if @contribute.created_by?(current_user) %>
        <%= link_to '編集する', edit_contribute_path(@contribute) , class: 'btn btn-info btn-lg btn-block' %>
        <%= link_to '削除する', contribute_path(@contribute) , class: 'btn btn-danger btn-lg btn-block' , method: :delete, data: {confirm: '本当に削除しますか？'} %>
      <% end %> 
    </div>
  </div>  
</div>
